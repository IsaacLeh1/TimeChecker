{
    "manifest_version": 3,
    "name": "Time Keeper",
    "version": "1.0",
    "description": "Tracks browsing history and time spent on websites.",
    "permissions": [
      "tabs",
      "activeTab",
      "storage",
      "idle"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    }
  }
